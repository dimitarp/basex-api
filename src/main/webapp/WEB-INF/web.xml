<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">

  <display-name>BaseX HTTP Server</display-name>
  <description>BaseX HTTP Server</description>
<!--
  <context-param>
    <param-name>basexhome</param-name>
    <param-value>/var/run/basex</param-value>
  </context-param>

  <context-param>
    <param-name>basexhttp</param-name>
    <param-value>/var/run/basex/http</param-value>
  </context-param>
-->
  <servlet>
    <servlet-name>WebDAV</servlet-name>
    <servlet-class>org.basex.api.webdav.WebDAVServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WebDAV</servlet-name>
    <url-pattern>/webdav/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>REST</servlet-name>
    <servlet-class>org.basex.api.rest.RESTServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>REST</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RESTful XQuery</servlet-name>
    <servlet-class>org.basex.api.restxq.RestXqServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RESTful XQuery</servlet-name>
    <url-pattern>/restxq/*</url-pattern>
  </servlet-mapping>
</web-app>
